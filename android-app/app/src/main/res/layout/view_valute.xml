<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/margin__micro"
    android:paddingTop="@dimen/margin"
    android:paddingBottom="@dimen/margin"
    android:paddingLeft="@dimen/margin__large"
    android:paddingRight="@dimen/margin__large"
    android:background="@color/base">

    <TextView
        android:id="@+id/view_valute__tv_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        style="@style/AppTheme.Text.Title"
        android:text="view_valute__tv_value" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin__small">

        <TextView
            android:id="@+id/view_valute__tv_ref_nominal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/AppTheme.Text.Remark"
            android:text="view_valute__tv_ref_nominal" />
        <TextView
            android:id="@+id/view_valute__tv_nominal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="end"
            android:layout_marginStart="@dimen/margin__small"
            android:layout_marginLeft="@dimen/margin__small"
            style="@style/AppTheme.Text.Remark"
            android:text="view_valute__tv_nominal" />
    </LinearLayout>
</LinearLayout>
